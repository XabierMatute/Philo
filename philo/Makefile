endef
export DEATH

NAME := philosopher

SRC :=	main.c						\
		checkinput/invalidinput.c	\
		checkinput/isnumeric.c		\
		errors/argc_error.c			\
		errors/numeric_error.c			\
		

HEADER := philosophers.h
		
WHITE = \033[0;37m
RED = \033[0;31m
CYAN = \033[0;36m
GREEN = \033[0;32m
MAGENTA = \033[0;35m

OBJ := $(SRC:%.c=%.o)

SANI 	:= -fsanitize=address -g3

CC 		:= gcc
CFLAGS 	:= -Wall  -Wextra -Werror
# CFLAGS 	:= -Wall  -Wextra -Werror $(SANI)

RM 		:= rm -rf

val 	:=  valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "$(GREEN)Philosopher compiled...$(WHITE)"
	@echo "$(CYAN)$$DEATH$(WHITE)"

%.o: %.c $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

sani:
	@echo "Compilando con opciones de seguridad..."
	$(MAKE) CFLAGS='$(CFLAGS) $(SANI)' all

flagless:
	$(MAKE) CFLAGS='' all

normi:
	norminette $(SRC)

clean : 
		$(RM) $(OBJ)
		@echo "$(RED)clean done...$(WHITE)"

fclean : clean
		$(RM) $(NAME)
		@echo "$(RED)fclean done...$(WHITE)"

re : fclean all

.PHONY : all clean fclean re sani flagless